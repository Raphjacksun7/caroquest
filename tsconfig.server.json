
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2017",
    "isolatedModules": false,
    "noEmit": false,
    "esModuleInterop": true, 
    "resolveJsonModule": true 
  },
  "include": [
    "server.ts", 
    "src/lib/socketHandler.ts", 
    "src/lib/gameLogic.ts",
    "src/lib/types.ts",
    "src/lib/gameStore.ts",
    "src/lib/matchmaking.ts",
    "src/lib/serialization.ts",
    "src/lib/generated/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": ["node_modules", "src/app", "src/components", "src/hooks", "src/locales", "public/workers", "src/lib/clientUtils.ts"]
}
